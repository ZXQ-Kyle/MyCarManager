<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="8dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    >

<ImageView
    android:layout_marginRight="16dp"
    android:layout_centerVertical="true"
    android:tint="@color/colorAccent"
    android:src="@drawable/money"
    android:id="@+id/it_iv_history"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>

    <TextView
        android:layout_toRightOf="@id/it_iv_history"
        android:id="@+id/it_tv_history_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="时间"
        android:textSize="18sp"/>


    <TextView
        android:id="@+id/it_tv_history_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="2500.00"
        android:textSize="18sp"/>

    <TextView
        android:layout_toRightOf="@id/it_iv_history"
        android:id="@+id/it_tv_history_tags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/it_tv_history_date"
        android:layout_marginTop="6dp"
        android:textSize="16sp"/>


</RelativeLayout>