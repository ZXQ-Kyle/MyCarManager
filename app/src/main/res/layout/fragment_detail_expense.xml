<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <include
        android:id="@+id/include2"
        layout="@layout/app_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="@string/total_money"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include2"
        />

    <com.kyle.mycar.View.NumberAnimTextView
        android:id="@+id/tv_money_expense_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="20"
        android:textColor="@color/colorAccent"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:ignore="HardcodedText"/>

    <ImageView
        android:id="@+id/iv_odo_expense_detail"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="16dp"
        android:tint="@color/colorPrimary"
        app:layout_constraintLeft_toLeftOf="@+id/tv_money_expense_detail"
        app:layout_constraintTop_toBottomOf="@+id/tv_money_expense_detail"
        app:srcCompat="@drawable/odo"/>

    <TextView
        android:id="@+id/tv_odo_expense_detail"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:gravity="center_vertical"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/iv_odo_expense_detail"
        app:layout_constraintLeft_toRightOf="@+id/iv_odo_expense_detail"
        app:layout_constraintTop_toTopOf="@+id/iv_odo_expense_detail"
        app:layout_constraintVertical_bias="0.0"/>

    <ImageView
        android:id="@+id/iv_date_expense_detail"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/date"
        android:tint="@color/colorPrimary"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_odo_expense_detail"
        />

    <TextView
        android:id="@+id/tv_date_expense_detail"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:gravity="center_vertical"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/iv_date_expense_detail"
        app:layout_constraintLeft_toRightOf="@+id/iv_date_expense_detail"
        app:layout_constraintTop_toTopOf="@+id/iv_date_expense_detail"
        app:layout_constraintVertical_bias="0.0"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="368dp"
        android:layout_height="1dp"
        android:layout_marginEnd="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:background="@color/LineGray"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_date_expense_detail"/>

    <com.kyle.mycar.View.TagLayout.TagContainerLayout
        android:id="@+id/tag_layout_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        app:container_background_color="@android:color/transparent"
        app:container_enable_drag="false"
        app:container_border_width="0dp"
        app:container_border_color="@android:color/transparent"
        app:horizontal_interval="12dp"
        app:tag_horizontal_padding="12dp"
        app:tag_vertical_padding="6dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:tag_border_width="0dp"
        app:tag_clickable="false"
        app:tag_corner_radius="4dp"
        app:tag_ripple_duration="500"
        app:tag_theme="random"
        app:vertical_interval="10dp"/>

</android.support.constraint.ConstraintLayout>
