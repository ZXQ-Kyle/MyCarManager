<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kyle.mycar.MainActivity">

    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/fab_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/fab_margin"
        app:menu_icon="@drawable/ic_add_24dp"
        app:menu_colorNormal="@color/colorPrimary"
        app:menu_colorPressed="@color/colorPrimaryDark"
        app:menu_fab_size="normal"
        >
        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/oil"
            app:fab_label="@string/oil"
            app:fab_colorNormal="@color/colorCyan"
            app:fab_colorPressed="@color/colorCyanDark"
            />
        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/oilcan"
            app:fab_label="@string/maintenance"
            app:fab_colorNormal="@color/colorPurple"
            app:fab_colorPressed="@color/colorPurpleDark"
            />
    </com.github.clans.fab.FloatingActionMenu>

</RelativeLayout>
