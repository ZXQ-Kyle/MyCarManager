<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.kyle.mycar.SpalshActivity">

    <me.wangyuwei.particleview.ParticleView
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:pv_host_text="@string/app_name"
        app:pv_host_text_size="40sp"
        app:pv_particle_text="@string/car"
        app:pv_particle_text_size="20sp"
        app:pv_host_text_anim_time="500"
        app:pv_spread_anim_time="200"
        app:pv_text_anim_time="800"
        app:pv_background_color="#fff"
        app:pv_text_color="@color/colorPrimary"/>

</RelativeLayout>
