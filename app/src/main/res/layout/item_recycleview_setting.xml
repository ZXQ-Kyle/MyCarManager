<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@drawable/touch_bg"
    android:clickable="true"
    >

    <ImageView
        android:id="@+id/it_iv_setting_oiltype"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="24dp"
        android:src="@drawable/ic_add"
        />

    <TextView
        android:id="@+id/it_tv_setting_oiltype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@id/it_iv_setting_oiltype"
        android:text="@string/about"
        android:textColor="@color/TextGray"
        android:textSize="18sp"/>

    <ImageView
        android:id="@+id/iv_delete_setting_oiltype"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:clickable="true"
        android:padding="12dp"
        android:src="@drawable/selector_delete"
        />

    <ImageView
        android:id="@+id/iv_update_setting_oiltype"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/iv_delete_setting_oiltype"
        android:clickable="true"
        android:padding="12dp"
        android:src="@drawable/selector_update"
        />


</RelativeLayout>